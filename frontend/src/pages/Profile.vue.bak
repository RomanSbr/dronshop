<template>
  <section>
    <h1>Профиль</h1>
    <button @click="logout" class="btn-secondary" style="margin:10px 0;">Выйти</button>
    <pre v-if="me">{{ me }}</pre>
  </section>
</template>

<script setup>
import { ref, onMounted } from 'vue'
import api from '../shared/api'

function logout() {
  localStorage.removeItem('accessToken')
  localStorage.removeItem('refreshToken')
  window.dispatchEvent(new Event('auth-changed'))
}

const me = ref(null)
onMounted(async () => {
  try {
    const { data } = await api.get('/auth/me')
    me.value = data
  } catch (e) {
    localStorage.removeItem('accessToken')
    localStorage.removeItem('refreshToken')
  }
})
</script>


# Production Environment Variables
SECRET_KEY=your-production-secret-key-change-this-in-production
DATABASE_URL=postgresql://dronshop:dronshop@postgres:5432/dronshop
REDIS_URL=redis://redis:6379/0

# Security
ALLOWED_ORIGINS=http://localhost:80,https://your-domain.com
DEV_LOGIN_ENABLED=false
DEV_SEED=false

# Uploads
UPLOADS_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
JWT_REFRESH_EXPIRE_DAYS=30

# Email/SMS Settings (configure as needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
